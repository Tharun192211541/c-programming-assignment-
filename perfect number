#include<stdio.h>
int main ()
{
	printf("reg.no:192211541");
	int i,n,sum=0,rem;
	printf("\nenter the number");
	scanf("%d",&n);
	for (i=1;i<n;i++);
	{
		rem=n%i;
		if (rem==0)
		{
			sum=sum+i;
		}
	}
	if (sum=n)
	printf("it is a perfect number");
	else
	printf(" it is not a perfect number");
	return 0;

}
